<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:map="http://schemas.android.com/apk/res-auto"
             xmlns:droidicon="http://schemas.android.com/apk/res-auto"
             xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:cameraZoom="15"
                map:mapType="normal"
                map:uiCompass="false"
                map:uiZoomControls="false"
                map:uiZoomGestures="true"
            />

            <!--<TextView-->
                <!--android:id="@+id/pickup_location_help_text"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_margin="20dp"-->
                <!--android:padding="10dp"-->
                <!--android:text="@string/pickup_location"-->
                <!--android:background="#ffffff"-->
                <!--android:textColor="@android:color/primary_text_light"-->
                <!--android:layout_gravity="center_horizontal"/>-->

            <ImageView
                android:id="@+id/map_marker"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@drawable/icon_blue_map_marker"
                android:layout_centerInParent="true"
                />

            <com.gc.materialdesign.views.ButtonFloat
                android:id="@+id/currentLocationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="40dp"
                materialdesign:animate="true"
                materialdesign:iconDrawable="@drawable/icon_current_location" />


            <com.gc.materialdesign.views.ButtonFloat
                android:id="@+id/searchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_above="@id/currentLocationBtn"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="40dp"
                materialdesign:animate="true"
                materialdesign:iconDrawable="@drawable/icon_search" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/static_address"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            android:visibility="gone"
            android:background="@color/white">

            <ImageView
                android:id="@+id/closeAddressBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:color="@color/black"
                android:src="@drawable/icon_clear"/>

            <LinearLayout
                android:id="@+id/addressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/closeAddressBtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location Selected: "
                    android:textSize="20dp"
                    android:textColor="@color/black"

                />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#8d8d8d"
                    android:textSize="18dp"
                    android:singleLine="false"
                />

            </LinearLayout>
            <Button android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:text="Give Order Instructions"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18dp"
                android:background="#91d30d"/>

        </RelativeLayout>
    </RelativeLayout>

    <com.ziprun.consumer.ui.custom.AddressAutocompleteView
        android:id="@+id/address_autocomplete_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:visibility="gone"
    />
</FrameLayout>